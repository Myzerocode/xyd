{
    "theme": {
        "name": "opener",
        "logo": "/public/assets/logo.svg",
        "favicon": "/public/assets/logo.svg",
        "maxTocDepth": 2
    },
    "integrations": {
        "search": {
            "orama": true
        }
    },
    "navigation": {
        "header": [
            {
                "name": "Guides",
                "url": "/docs"
            },
            {
                "name": "REST API",
                "url": "/docs/rest"
            }
        ],
        "sidebar": [
            {
                "route": "docs",
                "items": [
                    {
                        "group": "Get Started",
                        "pages": [
                            "docs/introduction",
                            "docs/example2",
                            "docs/example3",
                            "docs/example4",
                            "docs/example5"
                        ]
                    }
                ]
            },
            {
                "route": "docs/rest",
                "items": [
                    {
                        "group": "Get Started",
                        "sort": 0,
                        "pages": [
                            "docs/rest/introduction"
                        ]
                    }
                ]
            }
        ]
    },
    "api": {
        "openapi": {
            "rest": {
                "source": "./openapi.yaml",
                "route": "docs/rest"
            }
        }
    },
    "engine": {
        "uniform": {
            "store": false
        }
    }
}