{
    "theme": {
        "name": "opener",
        "logo": "/public/assets/logo.svg",
        "favicon": "/public/assets/logo.svg"
    },
    "integrations": {
        "search": {
            "orama": true
        }
    },
    "navigation": {
        "header": [
            {
                "name": "Guides",
                "url": "/docs"
            },
            {
                "name": "Components",
                "url": "/docs/components"
            }
        ],
        "sidebar": [
            {
                "route": "docs",
                "items": [
                    {
                        "group": "Get Started",
                        "pages": [
                            "docs/guides/introduction",
                            "docs/guides/quickstart",
                            "docs/guides/deploy"
                        ]
                    },
                    {
                        "group": "Core concepts",
                        "pages": [
                            "docs/guides/settings",
                            "docs/guides/routing",
                            "docs/guides/themes"
                        ]
                    },
                    {
                        "group": "Writing Content",
                        "pages": [
                            "docs/guides/writing-quickstart",
                            "docs/guides/special-symbols",
                            "docs/guides/markdown-extensions",
                            "docs/guides/developer-content"
                        ]
                    },
                    {
                        "group": "Customization",
                        "pages": [
                            "docs/guides/customization-introduction",
                            "docs/guides/extending-default-theme",
                            "docs/guides/custom-theme"
                        ]
                    },
                    {
                        "group": "SDK Generation",
                        "pages": [
                            "docs/guides/sdk-quickstart",
                            "docs/guides/opensdk"
                        ]
                    },
                    {
                        "group": "Development",
                        "pages": [
                            "docs/development/roadmap",
                            "docs/development/contributing",
                            "docs/development/changelog"
                        ]
                    }
                ]
            },
            {
                "route": "docs/components",
                "items": [
                    {
                        "group": "Components",
                        "pages": [
                            "docs/components/text",
                            "docs/components/heading",
                            "docs/components/callouts",
                            "docs/components/details",
                            "docs/components/guide-card",
                            "docs/components/tables",
                            "docs/components/steps",
                            "docs/components/tabs",
                            "docs/components/grid"
                        ]
                    }
                ]
            }
        ]
    },
    "engine": {
        "paths": {
            "@components/*": [
                "../../packages/xyd-components/src/*"
            ]
        }
    },
    "redirects": [
        {
            "source": "",
            "destination": "/docs/guides/introduction"
        },
        {
            "source": "/",
            "destination": "/docs/guides/introduction"
        }
    ]
}