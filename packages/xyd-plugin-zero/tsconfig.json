{
  "compilerOptions": {
    "paths": {
      "@xyd-js/atlas": [
        "../xyd-atlas"
      ],
      "@xyd-js/core": [
        "../xyd-core/index.ts"
      ]
    },
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "target": "esnext",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [],
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}