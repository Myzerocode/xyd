{
  "compilerOptions": {
    "paths": {
      "@xyd-js/plugin-zero": [
        "../xyd-plugin-zero/src"
      ]
    },
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "target": "esnext",
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "host/**/*.ts",
    "host/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../xyd-plugin-zero"
    }
  ]
}