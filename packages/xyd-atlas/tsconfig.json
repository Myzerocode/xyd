{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/atlas/*": [
        "src/atlas/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ]
    },
    "typeRoots": [
      "./types.d.ts"
    ],
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.json",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}